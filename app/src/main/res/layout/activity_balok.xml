<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalokActivity">
    <EditText
        android:id="@+id/edtLebarBalok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="Input lebar"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/edtPanjangBalok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtLebarBalok"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Input panjang"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/edtTinggiBalok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLebarBalok"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Input tinggi"
        android:inputType="numberDecimal" />
    <Button
        android:id="@+id/btnHitungVolumeBalik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:layout_below="@+id/edtTinggiBalok"
        android:layout_marginTop="40dp"
        android:onClick="HitungVolumeBalok"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>